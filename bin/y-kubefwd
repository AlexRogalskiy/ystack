#!/usr/bin/env bash
[ -z "$DEBUG" ] || set -x
set -eo pipefail
YBIN="$(dirname $0)"

version=1.17.3

current_context="$(kubectl config current-context)"

ctx=$1
case $ctx in
  "--context=${current_context}") shift 1 ;;
  "--context="*)
    shift 1
    contextname="$(echo -n $ctx | cut -d '=' -f 2)"
    echo "Aborted because kubefwd always uses current-context ('$contextname' != '$current_context')"
    [ -z "$KUBECONFIG" ] || kubie_f_suggest="-f $KUBECONFIG"
    echo "Try:  y-kubie ctx $kubie_f_suggest -- $contextname"
    echo "Then: $(basename $0) $@"
    exit 1
    ;;
  *) ctx="--context=${current_context}" ;;
esac

[ $(id -u) -eq 0 ] || [ -z "$ctx" ] || y-buildkitd-available $ctx

bin_name=kubefwd \
  bin_version=v${version} \
  Darwin_url=https://github.com/txn2/kubefwd/releases/download/${version}/kubefwd_Darwin_amd64.tar.gz \
  Darwin_sha256=67c1702926064fdcfa0f443f2769286412abd72f324ff1ec479c7fcf7bb7e3a4 \
  Linux_url=https://github.com/txn2/kubefwd/releases/download/${version}/kubefwd_Linux_x86_64.tar.gz \
  Linux_sha256=215b344f001512b582b58f636d03fe5b43cfcc13635fefc6810c7ad3ce67b90a \
  bin_tgz_path=kubefwd \
  $YBIN/y-bin-dependency-download || exit $?

[ $(id -u) -ne 0 ] && echo "su privileges required for kubefwd" && exec sudo -E $0 $@

$YBIN/y-kubefwd-v${version}-bin "$@" || exit $?
