#!/usr/bin/env bash
[ -z "$DEBUG" ] || set -x
set -e

[ -z "$YSTACK_HOME" ] && echo "Missing an YSTACK_HOME env" && exit 1

COMPOSEFILES="-f $YSTACK_HOME/docker-compose.test.yml -f $YSTACK_HOME/docker-compose.dev-overrides.yml -f $YSTACK_HOME/docker-compose.known-good-build.yml $COMPOSEFILES"

KUBECONFIG=$YSTACK_HOME/devcluster/.kube/kubeconfig.yaml

if [ "$1" = "kubeconfig-path" ]; then
  echo "$KUBECONFIG" && \
  exit 0
fi

if [ "$1" = "kubie" ]; then
  y-kubie ctx -f $KUBECONFIG
  exit 0
fi

docker-compose $COMPOSEFILES "$@"

if [ "$1" = "down" ]; then
  echo "Removing local config"
  (docker-compose $COMPOSEFILES up cleanup)
  echo "Cleaning up volumes"
  (docker volume rm ystack_admin ystack_k3s-server 2>/dev/null || true)
  echo "Done"
fi
