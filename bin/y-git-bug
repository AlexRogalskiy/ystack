#!/bin/sh
[ -z "$DEBUG" ] || set -x
set -e
YBIN="$(dirname $0)"

version=0.7.1

bin_name=git-bug \
  bin_version=${version} \
  Darwin_url=https://github.com/MichaelMure/git-bug/releases/download/${version}/git-bug_darwin_amd64 \
  Darwin_sha256=cb0f46fe50d9a1cd1cb9853d142b82f9c762b7380ad38f972e4078bad30a05c7 \
  Linux_url=https://github.com/MichaelMure/git-bug/releases/download/${version}/git-bug_linux_amd64 \
  Linux_sha256=b114fffdb19b8fabc336e502200d68486b7e04c729e4eb2397e86bf86c9a3d21 \
  y-bin-dependency-download || exit $?

y-git-bug-${version}-bin "$@" || exit $?
